tile triangle {
	vertex a{angle : pi/3}, b{angle : pi/3}, c{angle : pi/3};
	edge left{ c -> a }, right{ b -> c }, bottom{ a -> b };
}

patch tri_strip(e, n) {
	if (n == 1)
		lay triangle;
	else
		lay triangle -> triangle -> tri_strip(nil, n-2) such_that e <-> $1.left, $2.right<-> $1.right, $3[0].bottom <-> $2.bottom;
}

patch tri_grid(e, n) {
	if (n == 1)
		lay tri_strip(nil, 1);
	else
		lay tri_strip(e, n) -> tri_grid( $1[1].left, n-1);
}

tableau {
	lay tri_grid(nil, 5);
}